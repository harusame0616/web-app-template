{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^db:generate"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": [
        "DATABASE_URL",
        "DIRECT_URL",
        "SUPABASE_ANON_KEY",
        "SUPABASE_SERVICE_ROLE_KEY",
        "NEXT_PUBLIC_SUPABASE_URL",
        "NEXT_PUBLIC_SUPABASE_ANON_KEY",
        "NEXT_PUBLIC_APP_URL",
        "NEXT_PUBLIC_AUTH_IS_FORGET_PASSWORD_ENABLED",
        "CLOUDFLARE_ACCOUNT_ID",
        "CLOUDFLARE_STREAM_CUSTOMER_CODE",
        "CLOUDFLARE_API_TOKEN"
      ]
    },
    "lint:check": {
      "dependsOn": ["^db:generate"]
    },
    "lint:fix": {
      "dependsOn": ["^db:generate"]
    },
    "format:check": {},
    "format:fix": {},
    "type:check": {
      "dependsOn": ["^db:generate"]
    },
    "test": {},
    "test:e2e": {
      "env": [
        "DATABASE_URL",
        "DIRECT_URL",
        "NEXT_PUBLIC_SUPABASE_URL",
        "SUPABASE_SERVICE_ROLE_KEY"
      ]
    },
    "test:e2e:list-reporter": {
      "env": [
        "DATABASE_URL",
        "DIRECT_URL",
        "NEXT_PUBLIC_SUPABASE_URL",
        "SUPABASE_SERVICE_ROLE_KEY"
      ]
    },
    "db:start": {
      "cache": false
    },
    "db:generate": {
      "cache": false,
      "env": ["DATABASE_URL", "DIRECT_URL"]
    },
    "db:migrate": {
      "cache": false,
      "persistent": true
    },
    "db:deploy": {
      "cache": false
    },
    "db:reset": {
      "env": [
        "DATABASE_URL",
        "DIRECT_URL",
        "NEXT_PUBLIC_SUPABASE_URL",
        "SUPABASE_SERVICE_ROLE_KEY"
      ],
      "cache": false
    },
    "dev": {
      "dependsOn": ["^db:start", "^db:generate"],
      "persistent": true,
      "cache": false
    }
  }
}
